@import '/styles/search.wxss';
.page-header {
    position: fixed;
    width: 100%;
    background: #eee;
    padding: 20rpx 0;
    z-index:1;
}

.tab {
    display: flex;
    display: -webkit-flex;
    justify-content: center;
    font-size: 26rpx;
}

.tab-list {
    border: 1rpx solid #6288d5;
    border-radius: 8rpx;
    background: #fff;
    color: #6288d5;
}

.tab-item {
    display: inline-block;
    padding: 12rpx 20rpx;
    transition: all 0.4s ease-in-out;
    -webkit-transition: all 0.4s ease-in-out;
}

.tab-item:hover {
    opacity: 0.8;
}

.tab .selected {
    background: #6288d5;
    color: #fff;
}
.page-body {
    
    padding-top: 90rpx;
    margin-top: 2rpx;
}
.group{
  margin-top:20rpx; 
  border-bottom:1rpx solid #ddd;

}
.list .list-item{
    
    padding: 30rpx;
    background: #fff;
    border-bottom: 1rpx solid #ddd;
}
.list .title{
    margin-bottom: 10rpx;
    display: flex;
}
.list .title .qian{
    
    width: 400rpx;
}
.list .title .name{
    font-size: 34rpx;
    margin-right: 10rpx;
}
.list .title .job{
    font-size: 28rpx;
    color: #999;
}
.list .title .date{
    position: relative;
    font-size: 20rpx;
    color: #999;
    margin-top:-10rpx;
    margin-left:-160rpx;

}
.userName{

  font-size:28rpx;
  width:250rpx;
  color:#999;
  text-align:center;
  margin-top:5px;

}
.company{
    font-size: 30rpx;
    color: #999;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
}