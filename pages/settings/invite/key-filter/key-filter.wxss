.edit {
    display: flex;
    align-items: center;
    background-color: #fff;
}

.edit .btn-add {
    line-height: 60rpx;
    width: 100rpx;
    height: auto;
}

.edit input {
    flex: 1;
    margin-left: 30rpx;
    font-size: 30rpx;
}

.list {
    padding: 30rpx;
}

.list .list-item {
    float: left;
    margin: 6rpx;
    padding: 10rpx 20rpx;
    background-color: #6287d5;
    border-radius: 10rpx;
    color: #fff;
    font-size: 30rpx;
}
.list .list-item:active{
    opacity: .6;
}